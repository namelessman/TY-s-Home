/* pages/man/man.wxss */
ec-canvas {
  width: 100%;
  height: 100%;
}
/**app.wxss**/
.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
swiper{
  width: 700rpx;
  height: 700rpx;
}
swiper-item{
  display: flex;
  justify-content: center;
  align-items: center;
}
.circle{
  width: 600rpx;
  height: 600rpx;
  border: 1px solid #000;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}